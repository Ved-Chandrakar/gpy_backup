<%- include('../partials/header') %>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-0">
                        <i class="fas fa-seedling text-success me-2"></i>
                        पौधा प्रबंधन
                    </h1>
                    <p class="text-muted">कुल <%= totalPlants %> पौधे उपलब्ध</p>
                </div>
                <% if (req.user && (req.user.role.name === 'state' || req.user.role.name === 'collector')) { %>
                    <div>
                        <a href="/admin/plants/add" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>नया पौधा जोड़ें
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>



    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <i class="fas fa-apple-alt fa-2x mb-2"></i>
                    <h6>फल</h6>
                    <h4><%= plants.filter(p => p.category === 'fruit').length %></h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <i class="fas fa-seedling fa-2x mb-2"></i>
                    <h6>फूल</h6>
                    <h4><%= plants.filter(p => p.category === 'flower').length %></h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <i class="fas fa-leaf fa-2x mb-2"></i>
                    <h6>औषधीय</h6>
                    <h4><%= plants.filter(p => p.category === 'medicinal').length %></h4>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <i class="fas fa-tree fa-2x mb-2"></i>
                    <h6>लकड़ी</h6>
                    <h4><%= plants.filter(p => p.category === 'timber').length %></h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Plants Grid -->
    <div class="row">
        <% if (plants && plants.length > 0) { %>
            <% plants.forEach(plant => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <% if (plant.image_url) { %>
                            <img src="<%= plant.image_url %>" class="card-img-top" alt="<%= plant.name %>" style="height: 200px; object-fit: cover;">
                        <% } else { %>
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-seedling fa-3x text-muted"></i>
                            </div>
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= plant.name %></h5>
                            <p class="card-text">
                                <strong>स्थानीय नाम:</strong> <%= plant.local_name || 'अनुपलब्ध' %><br>
                                <strong>श्रेणी:</strong> 
                                <span class="badge bg-<%= plant.category === 'fruit' ? 'success' : plant.category === 'flower' ? 'danger' : plant.category === 'medicinal' ? 'warning' : plant.category === 'timber' ? 'info' : 'secondary' %>">
                                    <%= plant.category === 'fruit' ? 'फल' : plant.category === 'flower' ? 'फूल' : plant.category === 'medicinal' ? 'औषधीय' : plant.category === 'timber' ? 'लकड़ी' : 'अन्य' %>
                                </span>
                            </p>
                            <p class="text-muted"><%= plant.care_instructions || 'कोई देखभाल निर्देश नहीं' %></p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>वितरित:</strong> 
                                    <span class="badge bg-<%= (plant.distributed_count || 0) > 10 ? 'success' : (plant.distributed_count || 0) > 0 ? 'warning' : 'secondary' %>">
                                        <%= plant.distributed_count || 0 %>
                                    </span>
                                </div>
                                <div>
                                    <strong>वृद्धि अवधि:</strong> <%= plant.growth_period_months || 12 %> महीने
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <% if (req.user && (req.user.role.name === 'state' || req.user.role.name === 'collector')) { %>
                                <div class="btn-group w-100" role="group">
                                    <a href="/admin/plants/<%= plant.id %>/edit" class="btn btn-outline-warning" title="संपादित करें">
                                        <i class="fas fa-edit me-1"></i>संपादित करें
                                    </a>
                                    <button class="btn btn-outline-danger delete-plant-btn" data-plant-id="<%= plant.id %>" title="हटाएं">
                                        <i class="fas fa-trash me-1"></i>हटाएं
                                    </button>
                                </div>
                            <% } else { %>
                                <div class="text-center text-muted">
                                    <small>केवल देखने की अनुमति है</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-seedling fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">कोई पौधा नहीं मिला</h5>
                        <p class="text-muted">नया पौधा जोड़ने के लिए "नया पौधा जोड़ें" बटन पर क्लिक करें</p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                <% if (page > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= page - 1 %>">पिछला</a>
                    </li>
                <% } %>
                
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === page ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                    </li>
                <% } %>
                
                <% if (page < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= page + 1 %>">अगला</a>
                    </li>
                <% } %>
            </ul>
        </nav>
    <% } %>
</div>

<script>
// Add event listeners when the DOM is loaded
document.addEventListener('DOMContentLoaded', function() {
    // Add click event listeners to all delete buttons
    const deleteButtons = document.querySelectorAll('.delete-plant-btn');
    deleteButtons.forEach(button => {
        button.addEventListener('click', function() {
            const plantId = this.getAttribute('data-plant-id');
            deletePlant(plantId);
        });
    });
});

function deletePlant(plantId) {
    if (confirm('क्या आप वाकई इस पौधे की जानकारी को हटाना चाहते हैं?')) {
        fetch(`/admin/plants/${plantId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            }
        })
        .then(response => {
            if (!response.ok) {
                throw new Error(`HTTP error! status: ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            if (data.success) {
                alert('पौधा सफलतापूर्वक हटाया गया');
                location.reload();
            } else {
                alert('त्रुटि: ' + (data.message || 'पौधा हटाने में त्रुटि हुई'));
            }
        })
        .catch(error => {
            console.error('Delete Error:', error);
            alert('पौधा हटाने में त्रुटि हुई: ' + error.message);
        });
    }
}
</script>

<%- include('../partials/footer') %>
